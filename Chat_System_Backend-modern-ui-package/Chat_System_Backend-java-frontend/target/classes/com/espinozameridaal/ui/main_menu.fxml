<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ListView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.espinozameridaal.ui.MainMenuController">

    <!-- Top bar -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Java TCP Chat"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label text="Logged in as:"/>
                <Label fx:id="currentUserLabel"
                       style="-fx-font-weight: bold;"/>

                <Label fx:id="currentChat"
                       text="Chattting with :  "
                       style="-fx-font-weight: bold;"/>

            </HBox>
        </HBox>
    </top>

    <!-- Left: user selection -->
    <left>
        <VBox spacing="12" prefWidth="200">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Section Title -->
            <Label text="Friends / Users"
                   style="-fx-font-weight: bold;"/>

            <!-- Existing Friend Selection -->
            <ComboBox fx:id="friendComboBox"
                      promptText="Select user to chat with"/>

            <Button text="Refresh list"
                    onAction="#onRefreshFriends"/>


            <Button text="Refresh Pending Request"
                    onAction="#onRefreshRequest"/>

            <Label text="Pending Friend Requests: "
                   style="-fx-font-weight: bold;"/>

            <ListView fx:id="pendingRequestsList" prefHeight="200"/>


            <Label text="Add Friend"
                   style="-fx-font-weight: bold;"/>

            <!-- Textbox for entering friend's username -->
            <TextField fx:id="addFriendField"
                       promptText="Enter username"/>

            <!-- Button for sending friend request -->
            <Button text="Send Request"
                    onAction="#onSendFriendRequest"/>

            <!-- Confirmation message -->
            <Label fx:id="friendRequestStatus"
                   text=""
                   style="-fx-text-fill: green;"/>




        </VBox>
    </left>


    <!-- Center: chat area -->
    <center>
        <BorderPane>


            <!-- Chat log -->
            <center>
                <TextArea fx:id="chatArea"
                          editable="false"
                          wrapText="true">
                    <BorderPane.margin>
                        <Insets top="10" right="10" bottom="0" left="0"/>
                    </BorderPane.margin>
                </TextArea>
            </center>

            <!-- Message input -->
            <bottom>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="8" right="10" bottom="10" left="0"/>
                    </padding>

                    <TextField fx:id="messageField"
                               promptText="Type a messageâ€¦"
                               HBox.hgrow="ALWAYS"/>

                    <Button text="Send"
                            defaultButton="true"
                            onAction="#onSendMessage"/>
                </HBox>
            </bottom>
        </BorderPane>
    </center>

</BorderPane>
